<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#6d7278"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/left_menu_no_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 해주세요"
            android:textSize="15dip"
            android:textColor="#ffffff"/>
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/left_menu_login"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	
		<ImageView
		    android:id="@+id/profile_image"
		    android:layout_width="100dip"
		    android:layout_height="100dip"
		    android:layout_gravity="center"
		    android:paddingBottom="20dp"
		    android:scaleType="fitXY"
		    android:layout_marginTop="15dip"
		    android:src="@drawable/image_default" />
	
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:paddingBottom="10dip" >
		
		<TextView
		    android:id="@+id/name_home_left"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="신한솔님"
		    android:textColor="#ffffff"
		    android:layout_marginLeft="15dip" />
		<TextView
		    android:id="@+id/team_name_home_left"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="seoul 소속"
		    android:textColor="#00ffff"
		    android:layout_marginLeft="15dip"  />
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/musician_join"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginBottom="10dip">
		  <LinearLayout
		      android:id="@+id/musician_page"
		      android:layout_width="100dip"
		      android:layout_height="30dip"
		      android:gravity="center_vertical"
		      android:layout_marginLeft="15dip">
		      <ImageView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		      <TextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="버스커페이지"
		          android:textSize="15dip"
		          android:textColor="#00ffff"/>
		  </LinearLayout>
		  <LinearLayout
		      android:id="@+id/musician_busking_join"
		      android:layout_width="100dip"
		      android:layout_height="30dip"
		      android:gravity="center_vertical"
		      android:layout_marginLeft="15dip">
		      <ImageView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		      <TextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="공연등록"
		          android:textSize="15dip"
		          android:textColor="#00ffff"/>
		  </LinearLayout>
		  <LinearLayout
		      android:id="@+id/musician_partner"
		      android:layout_width="100dip"
		      android:layout_height="30dip"
		      android:gravity="center_vertical"
		      android:layout_marginLeft="15dip">
		      <ImageView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		      <TextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="동료찾기"
		          android:textSize="15dip"
		          android:textColor="#00ffff"/>
		  </LinearLayout>
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/musician_join"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginBottom="10dip">
		  <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:background="#ffffff"
		    android:layout_marginBottom="10dip"/>
		  <LinearLayout
		      android:id="@+id/musician_busker_search"
		      android:layout_width="100dip"
		      android:layout_height="30dip"
		      android:gravity="center_vertical"
		      android:layout_marginLeft="15dip">
		      <ImageView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		      <TextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="버스커 찾기"
		          android:textSize="15dip"
		          android:textColor="#ffffff"/>
		  </LinearLayout>
		  <LinearLayout
		      android:id="@+id/musician_like_search"
		      android:layout_width="100dip"
		      android:layout_height="30dip"
		      android:gravity="center_vertical"
		      android:layout_marginLeft="15dip">
		      <ImageView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		      <TextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="즐겨찾기"
		          android:textSize="15dip"
		          android:textColor="#ffffff"/>
		  </LinearLayout>
		  <LinearLayout
		      android:id="@+id/musician_alarm"
		      android:layout_width="100dip"
		      android:layout_height="30dip"
		      android:gravity="center_vertical"
		      android:layout_marginLeft="15dip">
		      <ImageView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		      <TextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="공연알림받기"
		          android:textSize="15dip"
		          android:textColor="#ffffff"/>
		  </LinearLayout>
		  <LinearLayout
		      android:id="@+id/musician_info"
		      android:layout_width="100dip"
		      android:layout_height="30dip"
		      android:gravity="center_vertical"
		      android:layout_marginLeft="15dip">
		      <ImageView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		      <TextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="개인정보"
		          android:textSize="15dip"
		          android:textColor="#ffffff"/>
		  </LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/busker_join_btn"
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:layout_above="@+id/logout_layout">
		<ImageView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="버스커\n등록하기"
		    android:layout_marginLeft="15dip"
		    android:textSize="15dip"
		    android:textColor="#ffffff"/>
	</LinearLayout>
	
	<RelativeLayout
	    android:id="@+id/logout_layout"
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal">
		<LinearLayout
		    android:id="@+id/busker_line_line"
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:background="#ffffff"
		    android:layout_alignParentTop="true"/>
		<TextView
		    android:id="@+id/logout_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerInParent="true"
		    android:textSize="15dip"
		    android:text="로그아웃"
		    android:textColor="#ffffff" />
	</RelativeLayout>
</RelativeLayout>