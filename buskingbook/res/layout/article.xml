<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    

    <!-- 타이틀 -->
     <FrameLayout 
         android:id="@+id/title"
         android:layout_width="match_parent"
         android:layout_height="40dip"
         android:background="#01d0d2">
		<ImageView
            android:id="@+id/title_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/menu"
            android:layout_marginLeft="5dip"
            android:layout_gravity="center_vertical|left"/>
		<TextView
	       android:id="@+id/test_main"
	       android:layout_gravity="center"
	       android:text="이슈 UP"
	       android:layout_width="wrap_content" 
	       android:layout_height="wrap_content"
	       android:textColor="#ffffff"/>
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:background="#0ea7a5"
		    android:gravity="bottom"
		    android:layout_marginBottom="1dip"/>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:background="#376263"
		    android:gravity="bottom"/>
	</FrameLayout>
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/title">
	    
		<LinearLayout
		    android:id="@+id/article"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:orientation="vertical">
		    <ImageView
		        android:id="@+id/main_article_img"
		        android:layout_width="match_parent"
		        android:layout_height="200dip"
		        android:scaleType="fitXY"
		        android:layout_marginTop="10dip"
		        android:layout_marginBottom="20dip"
		        android:layout_marginLeft="10dip"
		        android:layout_marginRight="10dip"
		        android:background="@drawable/default_a"/>
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
				<TextView
				    android:id="@+id/main_article_title"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="20dip"
				    android:textColor="#000000"
				    android:textStyle="bold"
				    android:layout_marginLeft="15dip"
				    android:text=""
				    android:maxLines="2"/>
				<TextView
				    android:id="@+id/main_article_calendar"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textSize="15dip"
				    android:textColor="#000000"
				    android:layout_marginTop="15dip"
				    android:layout_alignLeft="@+id/main_article_title"
				    android:layout_below="@+id/main_article_title"
				    android:text=""/>
				<LinearLayout 
				    android:id="@+id/under_line"
				    android:layout_width="match_parent"
				    android:layout_height="1dip"
				    android:layout_marginRight="15dip"
				    android:layout_marginBottom="20dip"
				    android:layout_marginTop="10dip"
				    android:layout_alignLeft="@+id/main_article_calendar"
				    android:layout_below="@+id/main_article_calendar"
				    android:background="#d5d5d5"/>
				<LinearLayout
				    android:id="@+id/main_body"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginLeft="15dip"
				    android:layout_marginRight="15dip"
				    android:layout_below="@+id/under_line"
				    android:orientation="vertical">
				    <TextView
					    android:id="@+id/main_article_intro"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="18dip"
					    android:textColor="#000000"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_start"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#ff1111"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_start_a"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#000000"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_q1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#ff1111"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_a1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#000000"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_q2"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#ff1111"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_a2"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#000000"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_q3"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#ff1111"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_a3"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#000000"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_q4"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#ff1111"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_a4"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#000000"
					    android:layout_marginTop="15dip"
					    android:text=""/>
				  	<TextView
					    android:id="@+id/main_article_q5"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#ff1111"
					    android:layout_marginTop="15dip"
					    android:text=""/>
					<TextView
					    android:id="@+id/main_article_a5"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="15dip"
					    android:textColor="#000000"
					    android:layout_marginTop="15dip"
					    android:text=""/>
				  </LinearLayout>
		   </RelativeLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>