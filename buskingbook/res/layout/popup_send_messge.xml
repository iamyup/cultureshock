<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:gravity="center">	
    
    <FrameLayout 
		android:layout_width="320dip"    
	    android:layout_height="42dip"
	    android:background="#5cc8ca">
	    
        <TextView
            android:id="@+id/send_popup_t"
            android:layout_width="wrap_content"    
            android:layout_height="wrap_content"
            android:text="TO. 버스커버스커"
            android:textSize="17dip"
            android:textColor="#ffffff"
            android:paddingLeft="10dip"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_btn"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dip"/>
	</FrameLayout>
	<LinearLayout
	    android:id="@+id/send_popup_body"
	    android:layout_width="match_parent"
	    android:layout_height="200dip"
	    android:orientation="vertical">
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="30dip"
		    android:layout_marginLeft="15dip"
		    android:layout_marginRight="15dip"
		    android:layout_marginTop="20dip"
		    android:background="#ffffff">
		    <EditText
		        android:id="@+id/partner_add_phone"
		        android:layout_width="match_parent"
		        android:layout_height="30dip"
		        android:paddingLeft="5dip"
		        android:paddingTop="5dip"
		        android:hint="*필수 연락처를 남겨주세요"
		        android:maxLines="6"
		        android:gravity="top"
		        android:background="#ffffff"
		        android:textSize="14dip"
		        android:textColor="#000000"/>
		   
	 </LinearLayout>
	  <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="#dadada"
		        android:layout_marginLeft="15dip"
		    	android:layout_marginRight="15dip"/>
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="100dip"
		    android:layout_marginLeft="15dip"
		    android:layout_marginRight="15dip"
		    android:layout_marginTop="10dip"
		    android:background="#ffffff">
		    <EditText
		        android:id="@+id/partner_add_edittext"
		        android:layout_width="match_parent"
		        android:layout_height="100dip"
		        android:paddingLeft="5dip"
		        android:paddingTop="5dip"
		        android:hint="자기소개 및 메세지"
		        android:maxLines="6"
		        android:gravity="top"
		        android:background="#ffffff"
		        android:textSize="14dip"
		        android:textColor="#000000"/>
	 </LinearLayout>
	   <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="#dadada"
		        android:layout_marginLeft="15dip"
		    	android:layout_marginRight="15dip"/>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/send_messge_o"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/btn_o"
		android:gravity="center"
		android:layout_marginBottom="15dip">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="보내기"
	        android:textSize="15dip"
	        android:textColor="#ffffff"/>
	</LinearLayout>
    
    
    
</LinearLayout>
