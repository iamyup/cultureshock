				            android:ellipsize="end"
				            android:textSize="15dip"
				            android:textStyle="bold"
				            android:textColor="#01d0d2"
				            android:layout_toLeftOf="@+id/busker_join_teamname_2"
				            android:layout_marginLeft="15dip"/>
