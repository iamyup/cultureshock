<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    

    <!-- 타이틀 -->
     <FrameLayout 
         android:id="@+id/title"
         android:layout_width="match_parent"
         android:layout_height="40dip"
         android:background="#01d0d2">
		<ImageView
            android:id="@+id/title_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/menu"
            android:layout_marginLeft="5dip"
            android:layout_gravity="center_vertical|left"/>
		<TextView
	       android:id="@+id/test_main"
	       android:layout_gravity="center"
	       android:text="포스터"
	       android:layout_width="wrap_content" 
	       android:layout_height="wrap_content"
	       android:textSize="18dip"
	       android:textStyle="bold"
	       android:textColor="#ffffff"/>
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:background="#0ea7a5"
		    android:gravity="bottom"
		    android:layout_marginBottom="1dip"/>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:background="#376263"
		    android:gravity="bottom"/>
	</FrameLayout>
	<RelativeLayout
	    android:id="@+id/time_three"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="visible"
	    android:layout_below="@+id/title">
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@+id/popup_modify_myalbum_btn_confirm3">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:gravity="center_horizontal">
	        <TextView
	            android:id="@+id/time_three_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:layout_marginTop="5dip"
	            android:textSize="40dip"
	            android:textStyle="bold"
		        android:maxLines="1"
	            android:paddingLeft="5dip"
	            android:hint=""/>
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="200dip">
		        <ImageView
		            android:id="@+id/time_three_img"
		            android:layout_width="match_parent"
		            android:layout_height="200dip"
		            android:scaleType="fitXY"/>
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:background="#55000000">
			        <LinearLayout 
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dip"
			            android:layout_alignParentBottom="true"
			            android:layout_marginBottom="50dip">
			      	    <TextView
			            	android:id="@+id/time_three_calendar"
			            	android:layout_width="250dip"
			            	android:layout_height="wrap_content"
			            	android:textSize="30dip"
			            	android:textStyle="bold"
			            	android:layout_marginLeft="15dip"
			            	android:text=""
			            	android:textColor="#ffffff"/>
			   		 </LinearLayout>
			   		 <LinearLayout 
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_alignParentBottom="true"
			            android:layout_marginBottom="20dip">
			      	    <TextView
			            	android:id="@+id/time_three_calendar2"
			            	android:layout_width="250dip"
			            	android:layout_height="wrap_content"
			            	android:textSize="25dip"
			            	android:textStyle="bold"
			            	android:layout_marginLeft="15dip"
			            	android:text=""
			            	android:textColor="#ffffff"/>
			   		 </LinearLayout>
		        </RelativeLayout>
	        </RelativeLayout>
	        
	   		 <TextView
		            android:id="@+id/time_three_content"
		            android:layout_width="match_parent"
		            android:layout_height="50dip"
		            android:textColor="#000000"
		            android:layout_marginTop="10dip"
		            android:hint=""
		            android:gravity="top|left"
		            android:paddingLeft="5dip"
		            android:maxLines="2"
		            android:textSize="20dip"/>
	   		 <FrameLayout
		        android:id="@+id/map"
		        android:layout_width="match_parent"
		        android:layout_height="300dip"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true" />
	   		  
	   		 </LinearLayout>
	   		
		</ScrollView>
		
	</RelativeLayout>
</RelativeLayout>