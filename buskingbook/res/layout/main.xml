<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
	 <FrameLayout 
         android:id="@+id/title"
         android:layout_width="match_parent"
         android:layout_height="40dip"
         android:background="#01d0d2"/>
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
	<LinearLayout 
        android:id="@+id/lineup_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/select_home_layout"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight="0.25"
            android:gravity="center"
            android:background="#01d0d2"
            android:orientation="vertical">
	         <ImageView
	             android:id="@+id/select_home_img"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:background="@drawable/busker_page_btn_w"
	             android:layout_marginTop="2dip"
	             android:layout_marginBottom="2dip"/>
            <TextView
                android:id="@+id/select_all_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈"
                android:textSize="12dip"
                android:textColor="#ffffff"/> 
        </LinearLayout>
         <LinearLayout
            android:id="@+id/select_friend_layout"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight="0.25"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="vertical">
	         <ImageView
	             android:id="@+id/select_friend_img"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:background="@drawable/findb_btn"
	             android:layout_marginTop="2dip"
	             android:layout_marginBottom="2dip"/>
            <TextView
                android:id="@+id/select_all_friend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동료찾기"
                android:textSize="12dip"
                android:textColor="#01d0d2"/> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/select_like_layout"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight="0.25"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="vertical">
	         <ImageView
	             android:id="@+id/select_like_img"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:background="@drawable/like_btn_m"
	             android:layout_marginTop="2dip"
	             android:layout_marginBottom="2dip"/>
            <TextView
                android:id="@+id/select_all_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즐겨찾기"
                android:textSize="12dip"
                android:textColor="#01d0d2"/> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/select_team_layout"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight="0.25"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="vertical">
	         <ImageView
	             android:id="@+id/select_team_img"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:background="@drawable/busker_page_btn"
	             android:layout_marginTop="2dip"
	             android:layout_marginBottom="2dip"/>
            <TextView
                android:id="@+id/select_all_team_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀페이지"
                android:textSize="12dip"
                android:textColor="#01d0d2"/> 
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>